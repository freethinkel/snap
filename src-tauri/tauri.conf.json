{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Snap",
  "version": "1.1.1",
  "identifier": "dev.freethinkel.snap",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/statusbar-icon.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "snap",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "decorations": false
      },
      {
        "label": "statusbar",
        "fullscreen": false,
        "resizable": true,
        "width": 250,
        "height": 150,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://trysnap.app/releases/update.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEyRDQ1Njc0OTc2NUFGMzIKUldReXIyV1hkRmJVRWxwajcrdXE3YXovS0pRbFV1OU00YjVWUFBJZTduMFZidVFXOVV1UGlBTHoK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
